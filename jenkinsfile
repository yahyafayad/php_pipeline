pipeline {
    agent any

    environment {
        SONAR_TOKEN = credentials('squ_4e351b847a3ff196467c546d96a4d0eb937aa45a') // اسم الـ token اللي ضفته في Jenkins Credentials
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/yahyafayad/php_pipeline.git' // عدل الرابط حسب الريبو بتاعك
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'composer install || true' // هيتجاهل لو مفيش composer.json
            }
        }

        stage('Run SonarQube Scan') {
            steps {
                withSonarQubeEnv('My SonarQube Server') {
                    sh '''
                        sonar-scanner \
                          -Dsonar.projectKey=my_php_project \
                          -Dsonar.sources=. \
                          -Dsonar.host.url=http://localhost:9000 \
                          -Dsonar.login=squ_4e351b847a3ff196467c546d96a4d0eb937aa45a
                    '''
                }
            }
        }
    }
}
